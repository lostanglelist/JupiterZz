@model DHSHOP.Models.ImageModel

@{
    ViewData["Title"] = "Edit";
}
<div class="container relative">
<h1>Edit</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
